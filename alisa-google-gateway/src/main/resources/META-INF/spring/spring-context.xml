<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>
    <context:property-placeholder properties-ref="properties"/>

    <context:component-scan base-package="ru.drudenko.alisa.google"/>

    <bean id="googleSettings" class="ru.drudenko.alisa.google.configuration.GoogleSettings">
        <constructor-arg value="${app.google.client_id}"/>
        <constructor-arg value="${app.google.client_secret}"/>
        <constructor-arg value="${app.google.redirect_url}"/>
    </bean>

    <bean id="gmailCommandService" class="ru.drudenko.alisa.google.impl.GmailCommandServiceImpl">
        <constructor-arg ref="googleSettings"/>
        <constructor-arg ref="alisaClientService"/>
    </bean>

    <bean id="googleTokenExtractor" class="ru.drudenko.alisa.google.impl.GoogleTokenExtractorImpl">
        <constructor-arg ref="googleSettings"/>
    </bean>

</beans>